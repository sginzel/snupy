# SQLite version 3.x
#   gem install sqlite3
#
#   Ensure the SQLite 3 gem is defined in your Gemfile
#   gem 'sqlite3'
development:
  adapter: mysql2
  database: snupy_again_dev
  pool: 5
  host: <%= ENV['SNUPYHOST'] || ask("SNUPYHOST", "localhost") %>
  port: <%= ENV['SNUPYPORT'] || ask("SNUPYPORT", "3306") %>
  username: <%= ENV['SNUPYUSER'] || ask("SNUPYUSER", "snupy") %>
  password: <%= ENV['SNUPYPASSWORD'] || ask("SNUPYPASSWORD", "snupy", false) %>
  reconnect: true
  local_infile: true
  socket: <%= ENV['SOCKET'] || ask("SOCKET", "/var/run/mysqld/mysqld.sock", false) %>

development_api:
  adapter: mysql2
  database: snupy_again_dev
  pool: 5
  host: <%= ENV['SNUPYHOST'] || ask("SNUPYHOST", "localhost") %>
  port: <%= ENV['SNUPYPORT'] || ask("SNUPYPORT", "3306") %>
  username: <%= ENV['SNUPY_APIUSER'] || ask("SNUPY_APIUSER", "snupy") %>
  password: <%= ENV['SNUPY_APIPASSWORD'] || ask("SNUPY_APIPASSWORD", "snupy", false) %>
  reconnect: true
  local_infile: true
