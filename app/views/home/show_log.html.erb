<h1>AQuA Query Log</h1>
<h2>Logs</h2>
<%= render_table(@query_log,
								 id: "logs",
								 column_order: %w(name identifier category duration messages data .*),
								 actions: {
										 Details: {url: home_show_log_details_path()},
										 Destroy: {url: home_destroy_log_path()}
								 }){|rec, event|
	rec[:messages] = event.messages.join(" <br> ")
	rec
} %>